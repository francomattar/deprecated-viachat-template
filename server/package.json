{
  "name": "server",
  "version": "1.0.0",
  "description": "Chatting app allows you to communicate with your customers in web chat rooms.",
  "repository": "https://github.com/devhasibulislam/viachat-template",
  "author": "Hasibul Islam",
  "main": "index.ts",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "start": "node ./dist/index.js",
    "build": "tsc",
    "lint:check": "eslint --ignore-path .eslintignore --ext .js,.ts .",
    "lint:fix": "lint --fix",
    "prettier:format": "prettier --ignore-path .gitignore --write \"**/*.+(js|ts|json)\"",
    "lint-prettier": "yarn lint:check && yarn prettier:format",
    "prepare": "husky"
  },
  "lint-staged": {
    "src/**/*.ts": "yarn lint-prettier"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "eslint": "^9.4.0",
    "express": "^4.19.2",
    "http-status": "^1.7.4",
    "mongoose": "^8.4.1",
    "winston": "^3.13.0",
    "winston-daily-rotate-file": "^5.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@typescript-eslint/eslint-plugin": "^7.12.0",
    "@typescript-eslint/parser": "^7.12.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.5",
    "prettier": "^3.3.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.4.5"
  }
}
